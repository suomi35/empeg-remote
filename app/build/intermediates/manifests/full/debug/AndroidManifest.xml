<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chasinglemons.empeg"
    android:versionCode="7"
    android:versionName="1.96.00hj" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />

    <application
        android:name="com.chasinglemons.empeg.GlobalData"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.chasinglemons.empeg.Start"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chasinglemons.empeg.PhoneMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ShortenActionbar" >
        </activity>
        <activity
            android:name="com.chasinglemons.empeg.TabletMain"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.chasinglemons.empeg.WidgetShowcase"
            android:label="Empeg widgets"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.chasinglemons.empeg.Settings"
            android:label="Settings" >
        </activity>
        <activity
            android:name="com.chasinglemons.empeg.AddEmpeg"
            android:icon="@drawable/player"
            android:label="Choose player" >
        </activity>
        <activity
            android:name="com.chasinglemons.empeg.LicensePopUp"
            android:icon="@drawable/player"
            android:label="Invalid License"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <service android:name="com.chasinglemons.empeg.NotificationService" />

        <receiver android:name="com.chasinglemons.empeg.NotificationService$NotifButtonListener" />
    </application>

</manifest>